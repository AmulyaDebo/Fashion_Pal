pipeline {
    environment{
        imageName=""
    }
    agent any

    stages {
        stage('Git Build') {
            steps {
                // Get some code from a GitHub repository
                git branch: 'master', url: 'https://github.com/AmulyaDebo/Fashion_Pal.git'
            }

        }
 
        
			stage ('Running Frontend Tests (Jest)') {
				steps {
					sh '''
							cd frontend
							npm ci
							cd src
							cd components
							npx jest
					'''
				}
			}
			
			stage ('Running backend supertest tests') {
				steps {
					sh '''
							cd backend
							npm ci
							npx jest
						
					'''
				}
			}
			
		
}


}
